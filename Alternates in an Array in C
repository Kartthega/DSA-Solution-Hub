//To find alternates in an array in C
#include<stdio.h>

void findalternates(int *arr,int n){
  for(int i=0;i<n;i++){
    printf("%d",arr[i]);
    i=i+1;
  }
return ;
}
int main(){
int n;
printf("Enter array size:");
scanf("%d",&n);

int arr[n];
for(int i=0;i<n;i++){
  printf("Enter array elements:");
  scanf("%d",&arr[i]);
}

findalternates(arr,n);

return 0;

}
