//Finding Peak Elements of an Array

#include<stdio.h>

void peakele(int *array,int n){
 for(int i=0;i<n;i++){
   if((array[i]>array[i-1])&&(array[i]>array[i+1])){
      printf("true");
 }
}
printf("false");
}

int main()
{
  int n;
  printf("Enter the length of an array:");
  scanf("%d",&n);

  int array[n];
  printf("Enter elements of array:");
  for(int i=0;i<n;i++){
    scanf("%d",&array[i]);
}

peakele();

return 0;
}

